<Window x:Class="CrystalLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Crystal Launcher"
        Width="1100"
        Height="680"
        MinWidth="980"
        MinHeight="620"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">
    <Border CornerRadius="16"
            Background="{StaticResource WindowBackdrop}"
            BorderBrush="#1FFFFFFF"
            BorderThickness="1.2"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="20,18,20,0" MouseLeftButtonDown="Header_OnMouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Width="44" Height="44" CornerRadius="12" Background="{StaticResource CardBackgroundBrush}">
                    <Grid>
                        <Ellipse Width="30" Height="30" Fill="{StaticResource AccentBrush}" Opacity="0.6"/>
                        <Ellipse Width="36" Height="36" Stroke="{StaticResource AccentSecondaryBrush}" StrokeThickness="2" Opacity="0.4"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Crystal Launcher" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Style="{StaticResource Caption}" Text="Modern launcher inspirado em MMORPGs"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Verificar" Style="{StaticResource GhostButton}" Command="{Binding VerifyCommand}" Margin="0,0,8,0"/>
                    <Button Content="Site" Style="{StaticResource GhostButton}" Command="{Binding OpenSiteCommand}"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Width="32" Height="32" Click="Minimize_Click" Style="{StaticResource GhostButton}" Padding="0" Margin="0,0,6,0">
                        <TextBlock Text="−" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                    <Button Width="32" Height="32" Click="Close_Click" Style="{StaticResource GhostButton}" Padding="0">
                        <TextBlock Text="×" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Background Accents -->
            <Grid Grid.Row="1">
                <Ellipse Width="520" Height="520" Fill="{StaticResource HeroAurora}" Opacity="0.55" HorizontalAlignment="Left" Margin="-160,-80,0,0">
                    <Ellipse.Effect>
                        <BlurEffect Radius="90"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Ellipse Width="360" Height="360" Fill="#55FF8FAF" HorizontalAlignment="Right" Margin="0,220,-140,0">
                    <Ellipse.Effect>
                        <BlurEffect Radius="80"/>
                    </Ellipse.Effect>
                </Ellipse>

                <Grid Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.4*"/>
                        <ColumnDefinition Width="1.6*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Hero / CTA -->
                    <Border Grid.Column="0"
                            Margin="0,0,12,0"
                            Padding="32"
                            CornerRadius="20"
                            Background="#55101528"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" VerticalAlignment="Top">
                                <TextBlock Text="{Binding GameTitle}" Style="{StaticResource HeadingXL}"/>
                                <TextBlock Text="{Binding Tagline}" Style="{StaticResource Body}" FontSize="18" Opacity="0.85" Margin="0,8,0,0"/>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Border Background="#33FFFFFF" CornerRadius="6" Padding="10,6" Margin="0,0,12,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="10" Height="10" Fill="{Binding ServerStatusBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ServerStatusLabel}" FontWeight="SemiBold" Foreground="White" Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#33FFFFFF" CornerRadius="6" Padding="10,6">
                                        <TextBlock Text="{Binding BuildVersion}" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{Binding ClientDirectoryDisplay}" Style="{StaticResource Caption}" Opacity="0.8" Margin="0,10,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Margin="0,30,0,0">
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding DownloadStatus}" Style="{StaticResource Body}" Opacity="0.9"/>
                                    <TextBlock Grid.Column="1" Text="{Binding DownloadProgress, StringFormat={}{0:F0}%}" Style="{StaticResource Caption}" HorizontalAlignment="Right"/>
                                </Grid>

                                <ProgressBar Height="12"
                                             Value="{Binding DownloadProgress}"
                                             Maximum="100"
                                             Background="{StaticResource ProgressBackgroundBrush}"
                                             Foreground="{StaticResource ProgressForegroundBrush}"
                                             BorderThickness="0"
                                             Margin="0,0,0,12"/>

                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <Button Content="Jogar" Style="{StaticResource PrimaryButton}" Width="150" Command="{Binding PlayCommand}" Margin="0,0,12,0"/>
                                    <Button Content="Configurações" Style="{StaticResource GhostButton}" Width="150" Command="{Binding OpenSettingsCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- News & Patch Notes -->
                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <Border Padding="24" CornerRadius="18" Background="#44101528" BorderBrush="#22FFFFFF" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Novidades" Style="{StaticResource HeadingL}"/>
                                <ListBox ItemsSource="{Binding News}" Style="{StaticResource CardList}" Height="240" Margin="0,12,0,0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Background="#2200D4FF" Padding="8,2" CornerRadius="4" Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Tag}" Style="{StaticResource Caption}"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding PublishedAt}" Style="{StaticResource Caption}"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="16" Foreground="White" Margin="0,6,0,0"/>
                                                <TextBlock Text="{Binding Subtitle}" Style="{StaticResource Body}" Opacity="0.82" Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>

                        <Border Padding="24" CornerRadius="18" Background="#44101528" BorderBrush="#22FFFFFF" BorderThickness="1" Margin="0,16,0,0">
                            <StackPanel>
                                <TextBlock Text="Patch Notes" Style="{StaticResource HeadingL}"/>
                                <ListBox ItemsSource="{Binding PatchNotes}" Style="{StaticResource CardList}" Height="140" Margin="0,12,0,0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Version}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Text="{Binding Summary}" Style="{StaticResource Body}" Opacity="0.8" Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Footer -->
            <Grid Grid.Row="2" Margin="24,0,24,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Personalize integrações e config.json de acordo com o seu servidor." Style="{StaticResource Caption}"/>
                <TextBlock Grid.Column="1" Text="© 2025 Crystal Realms Studio" Style="{StaticResource Caption}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
